<%- include ('common/header') -%>
<main class="formContainer">
  <h2>Register a new Pokemon</h2>
  <form action="/" method="post">
    <div class="inputStats">
      <label for="id">Number</label>
      <input
        type="number"
        name="id"
        required="required"
        title="number is obligatory"
      />
    </div>
    <div class="inputStats">
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        required="required"
        title="name is obligatory"
        autocapitalize="none"
      />
      <label for="type">Type</label>
      <select name="type" required>
        <Optgroup label="Types">
          <%allTypes.forEach(type=>{ %>
          <option><%=type%></option>
          <% })%>
        </Optgroup>
      </select>
    </div>
    <div class="inputStats">
      <label for="image">Image URL</label>
      <input
        type="url"
        name="image"
        required="required"
        title="image URL is obligatory"
      />
    </div>
    <label for="description">Description</label>
    <textarea
      name="description"
      cols="15"
      rows="5"
      placeholder="What is the history of this pokemon..."
    ></textarea>
    <div class="inputStats">
      <label for="height">Height</label>
      <input type="number" step="0.1" name="height" />
      <label for="weight">Weight</label>
      <input type="number" step="0.1" name="weight" />
    </div>
    <div class="inputStats">
      <label for="category">Category</label>
      <input type="text" name="category" />
    </div>
    <div class="inputStats">
      <label for="ability">Ability</label>
      <input type="text" name="ability" />
    </div>
    <button type="submit">Send</button>
  </form>
</main>
<%- include ('common/footer') -%>
